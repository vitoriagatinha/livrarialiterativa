    <div id="carrinho">
        <h1>Carrinho</h1>
        <table id="tabelacarrinho">
            </table>
            <p id="total"></p>
    </div>
    <script>
        var carrinho = {};

        function adicionarAoCarrinho(botao) {
            var produto = botao.parentElement;
            var nome = produto.getAttribute('data-nome');
            var preco = parseFloat(produto.getAttribute('data-preco'));
            if (carrinho[nome]) {
                carrinho[nome].quantidade += 1;
            } else {
                carrinho[nome] = {preco: preco, quantidade: 1};
            }
            atualizarCarrinho();
        }

        function removerDoCarrinho(nome) {
            delete carrinho[nome];
            atualizarCarrinho();
        }

        function adicionarAoCarrinho(botao) {
    var produto = botao.parentElement;
    var nome = produto.getAttribute('data-nome');
    var preco = parseFloat(produto.getAttribute('data-preco'));
    if (carrinho[nome]) {
        carrinho[nome].quantidade += 1;
    } else {
        carrinho[nome] = {preco: preco, quantidade: 1};
    }
    atualizarCarrinho();
}

function removerDoCarrinho(nome) {
    delete carrinho[nome];
    atualizarCarrinho();
}

function atualizarCarrinho() {
    var carrinhoDiv = document.getElementById('carrinho');
    var total = 0;


    while (carrinhoDiv.firstChild) {
        carrinhoDiv.removeChild(carrinhoDiv.firstChild);
    }

    
    var h1 = document.createElement('h1');
    h1.textContent = 'Carrinho';
    carrinhoDiv.appendChild(h1);

    for (var nome in carrinho) {
        var preco = carrinho[nome].preco;
        var quantidade = carrinho[nome].quantidade;
        total += preco * quantidade;

        
        var div = document.createElement('div');
        div.textContent = nome + ' - R$' + preco + ' x ' + quantidade + ' ';

       
var button = document.createElement('button');
button.textContent = 'Remover';
button.style.transform = 'scale(0.7)'; 
button.onclick = function() { removerDoCarrinho(nome); };
div.appendChild(button);     
        carrinhoDiv.appendChild(div);
    }

    
var p = document.createElement('p');
p.id = 'total';
p.style.fontSize = '1.5em'; 
p.innerHTML = '<strong>Total: R$' + total.toFixed(2) + '</strong>'; 
carrinhoDiv.appendChild(p);
}

function mostrarDetalhes(botao) {
    var produto = botao.parentElement;
    var descricao = produto.getAttribute('data-descricao');

    
    var modal = document.createElement("div");
    modal.innerHTML = descricao;

    
    var closeButton = document.createElement("button");
    closeButton.innerHTML = "X";
    closeButton.style.position = "absolute";
    closeButton.style.top = "0";
    closeButton.style.right = "0";
    closeButton.style.background = "none";
    closeButton.style.border = "none";
    closeButton.style.fontSize = "20px";
    closeButton.style.cursor = "pointer";

    
    modal.appendChild(closeButton);

    
    closeButton.addEventListener("click", function() {
        document.body.removeChild(modal);
    });

    
    modal.style.position = "fixed";
    modal.style.top = "50%";
    modal.style.left = "50%";
    modal.style.transform = "translate(-50%, -50%)";
    modal.style.background = "#000"; 
    modal.style.color = "#FFF"; 
    modal.style.padding = "20px";
    modal.style.borderRadius = "5px";
    modal.style.zIndex = "1"; 
    modal.style.width = "300px"; 
    modal.style.height = "200px";
    modal.style.overflow = "auto"; 

  
    document.body.appendChild(modal);
}    
    </script>
</body>
