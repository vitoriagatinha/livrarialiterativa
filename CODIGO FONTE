------TRANSFORMACAO DO SITE EM APP PELO ANDROID STUDIO------

///ARQUIVO MAIN ACTIVY KLOTIN\\\

package br.com.areatechbrasil.livrarialiterativa

import android.net.http.SslError
import android.webkit.SslErrorHandler
import android.os.Bundle
import android.webkit.WebView
import android.webkit.WebViewClient
import androidx.activity.ComponentActivity
import androidx.activity.compose.setContent
import androidx.compose.runtime.Composable
import androidx.compose.ui.viewinterop.AndroidView
import android.app.AlertDialog

class MainActivity : ComponentActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContent {
            MyWebView()
        }
    }

    override fun onBackPressed() {
        AlertDialog.Builder(this)
            .setIcon(android.R.drawable.ic_dialog_alert)
            .setTitle("Sobre o Aplicativo Livraria Literativa")
            .setMessage("Livraria Literativa\nVersão: 1.0.0\nTema: Venda de Livros\nDesenvolvedor: vitoriacpet@email.com\nComercio/Livraria")
            .setPositiveButton("Fechar") { _, _ -> super.onBackPressed() }
            .setNegativeButton("Cancelar", null)
            .show()
    }
}

@Composable
fun MyWebView() {
    AndroidView(factory = { context ->

        WebView(context).apply {
            this.settings.javaScriptEnabled = true
            this.settings.domStorageEnabled = false
            this.webViewClient = object : WebViewClient() {
                override fun onReceivedSslError(view: WebView, handler: SslErrorHandler, error: SslError) {}
            }
            this.loadUrl("https://livrariabook.000webhostapp.com/livrarialiterativa.html")
        }
    })
}


///ARQUIVO ANDROID MANIFEST.XML\\\

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.areatechbrasil.livrarialiterativa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Livraria Literativa"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LivrariaLiterativa"
        tools:targetApi="31">
        <activity
            android:name="br.com.areatechbrasil.livrarialiterativa.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.LivrariaLiterativa">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>


